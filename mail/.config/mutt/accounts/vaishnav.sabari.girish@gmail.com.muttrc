# vim: filetype=neomuttrc
# muttrc file for account vaishnav.sabari.girish@gmail.com
set realname = "vaishnav.sabari.girish"
set from = "vaishnav.sabari.girish@gmail.com"
set sendmail = "msmtp -a vaishnav.sabari.girish@gmail.com"
alias me vaishnav.sabari.girish <vaishnav.sabari.girish@gmail.com>
set folder = "/home/vaishnav/.local/share/mail/vaishnav.sabari.girish@gmail.com"
set header_cache = /home/vaishnav/.cache/mutt-wizard/vaishnav.sabari.girish@gmail.com/headers
set message_cachedir = /home/vaishnav/.cache/mutt-wizard/vaishnav.sabari.girish@gmail.com/bodies
set mbox_type = Maildir
set hostname = "gmail.com"
source /usr/share/mutt-wizard/switch.muttrc
set spoolfile = +INBOX
set postponed = +Drafts
set trash = +Trash
set record = +Sent

macro index o "<shell-escape>mw -y vaishnav.sabari.girish@gmail.com<enter>" "run mbsync to sync vaishnav.sabari.girish@gmail.com"
macro index \eg "<enter-command>unset wait_key<enter><shell-escape>gpg --list-secret-keys; printf 'Enter email ID of user to publish: '; read eID; printf 'Enter fingerprint of GPG key to publish: '; read eFGPT; /usr/libexec/gpg-wks-client --create \$eFGPT \$eID | msmtp --read-envelope-from --read-recipients -a vaishnav.sabari.girish@gmail.com<enter>"  "publish GPG key to WKS provider"
macro index \eh "<pipe-message>/usr/libexec/gpg-wks-client --receive | msmtp --read-envelope-from --read-recipients -a vaishnav.sabari.girish@gmail.com<enter>" "confirm GPG publication"

mailboxes "=INBOX" "=[Gmail]/All Mail" "=[Gmail]/Drafts" "=[Gmail]/Important" "=[Gmail]/Sent Mail" "=[Gmail]/Spam" "=[Gmail]/Starred" "=[Gmail]/Trash"
